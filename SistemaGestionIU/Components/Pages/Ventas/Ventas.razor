@page "/{IdUsuario:int}/ventas"
@inject VentasService ventaAccess

<div class="container">
    <div class="row">
        <div class="col-11">
            <h2 class="bi bi-receipt-cutoff "> Ventas </h2>
        </div>
        <div class="col-1">
            <a class="btn btn-secondary mt-2" href="/usuarios/@IdUsuario"> Volver </a>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-6">
            <a class="btn btn-success" href="/@IdUsuario/ventas/new"> Agregar ventas </a>
        </div>
    </div>
    <table class="table table-striped table-secondary mt-4">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Comentario</th>
                <th scope="col">Usuario</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Venta venta in ventas)
            {
                <tr>
                    <td>@venta.Id</td>
                    <td>@venta.Comentario</td>
                    <td>@venta.Usuario?.Nombre </td>
                    <td>
                        <a href="/ventas/@venta.Id/editar">
                            <button type="button" class="btn btn-outline-secondary">Actualizar</button>
                        </a>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-danger" @onclick="@(() => EliminarVenta(venta.Id))">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter]
    public int IdUsuario { get; set; }

    private List<Venta> ventas = new List<Venta>();

    private string filtro = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        ventas = await ventaAccess.ListarVentas();
    }

    public async Task EliminarVenta(int id)
    {
        await ventaAccess.EliminarVenta(id);
        ventas = await ventaAccess.ListarVentas();
    }

}
